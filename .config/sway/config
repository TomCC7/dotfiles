#System#
########
# wob https://github.com/francma/wob
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec mkfifo $SWAYSOCK.wob && tail -f $WOBSOCK | wob
# brightness
bindsym XF86MonBrightnessUp exec brightnessctl set +5% && light -G | cut -d'.' -f1 > $WOBSOCK
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- && light -G | cut -d'.' -f1 > $WOBSOCK
# volumeec $HOME/.config/
set $VOL_MAX 150
bindsym XF86AudioRaiseVolume exec $scripts/volumectl -i $VOL_MAX
bindsym XF86AudioLowerVolume exec $scripts/volumectl -d
bindsym XF86AudioMute exec $scripts/volumectl -t


#
# idle
#
bindsym $mod+Ctrl+Shift+l exec "swaylock -i $background"

